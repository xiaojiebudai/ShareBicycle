<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_operation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_buy_house"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_normal_size"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:text="我要买房" />

        <TextView
            android:id="@+id/tv_sell_house"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp" android:textSize="@dimen/text_normal_size"
            android:layout_weight="1"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:text="我要卖房" />

        <TextView
            android:id="@+id/tv_rent_house"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1" android:textSize="@dimen/text_normal_size"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:text="我要租房" />

        <TextView
            android:id="@+id/tv_rentout_house"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp" android:textSize="@dimen/text_normal_size"
            android:layout_weight="1"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:text="我要出租房" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="236dp"
            android:layout_height="236dp"
            android:id="@+id/iv_open"
            android:layout_gravity="center"

            android:src="@mipmap/lock_lockin_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/ll_lock_list"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:src="@mipmap/lock_list_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="设备列表"
                android:textColor="@color/color_main" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"    android:id="@+id/ll_wtf"
            android:layout_weight="1"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:src="@mipmap/lock_yous_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="优速门圣"
                android:textColor="@color/color_main" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"    android:id="@+id/ll_lock_manage"
            android:layout_weight="1"
            android:background="@color/gray_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"

                android:src="@mipmap/lock_manage_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="后台管理"
                android:textColor="@color/color_main" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>